<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtSalesNo"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:text="0001"
            android:textAlignment="viewStart"
            />
        <TextView
            android:id="@+id/txtEDate"
            android:layout_width="75dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13dp"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:text="2020-10-10"
            />
        <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:text="Phunsuk Wangdu"
            />
        <TextView
            android:id="@+id/txtGrossAmount"
            android:layout_width="70dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="20"
            />
        <TextView
            android:id="@+id/txtDiscountAmount"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="20"
            />
        <TextView
            android:id="@+id/txtSalesTaxAmount"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="20"

            />


        <TextView
            android:id="@+id/txtNetAmount"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="Wali"
            />
        <TextView
            android:id="@+id/txtPaidAmount"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="Wali"
            />
        <TextView
            android:id="@+id/txtBalanceAmount"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="Wali"
            />
        <TextView
            android:id="@+id/txtReturnAmount"
            android:layout_width="100dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:text="123,000"
            />

    </LinearLayout>


</RelativeLayout>